# direnv configuration for Python project

# Use Nix shell environment
use nix

# Activate uv virtual environment if it exists
if [ -d .venv ]; then
    source_env .venv/bin/activate
fi

# Ensure uv uses its own Python resolution, not Nix's
unset UV_PYTHON

# Add any additional environment variables here
# export PYTHONPATH=$PWD:$PYTHONPATH
